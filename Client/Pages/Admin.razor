@page "/admin"

<h3 class="mb-4 text-center">Admin Panel</h3>

<!-- Top cards row -->
<div class="row justify-content-center mb-4 g-3">
    <!-- Manage Rooms Card -->
    <div class="col-md-3">
        <div class="card shadow-lg text-center h-100">
            <div class="card-body d-flex flex-column justify-content-between">
                <div>
                    <!-- Room icon -->
                    <i class="bi bi-building display-3 mb-3 text-primary"></i>
                    <h5 class="card-title">Manage Rooms</h5>
                    <p class="card-text">Create, edit, and delete rooms.</p>
                </div>
                <button class="btn btn-primary mt-3 w-100" @onclick="GoToRoomManagement">
                    Open Room Management
                </button>
            </div>
        </div>
    </div>

    <!-- Manage Users Card -->
    <div class="col-md-3">
        <div class="card shadow-lg text-center h-100">
            <div class="card-body d-flex flex-column justify-content-between">
                <div>
                    <!-- Admin/User icon -->
                    <i class="bi bi-person-badge-fill display-3 mb-3 text-secondary"></i>
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text">View and manage user accounts.</p>
                </div>
                <button class="btn btn-secondary mt-3 w-100" @onclick="GoToUserManagement">
                    Open User Management
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Room Management section -->
@if (_showRoomManagement)
{
    <div class="card p-4 shadow-sm mb-4">
        <h5 class="mb-3"><i class="bi bi-pencil-square me-2"></i>Create / Edit Room</h5>

        <div class="row mb-3">
            <div class="col-md-4">
                <label class="form-label">Room Number</label>
                <input @bind="_roomNumber" placeholder="e.g. 101" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Capacity</label>
                <input type="number" @bind="_capacity" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Price per Night</label>
                <input type="number" step="0.01" @bind="_pricePerNight" class="form-control" />
            </div>
        </div>

        <div class="d-flex gap-2 mb-3">
            <button class="btn btn-success flex-grow-1" @onclick="CreateRoom">
                <i class="bi bi-plus-circle me-1"></i>Create
            </button>
            <button class="btn btn-warning flex-grow-1" @onclick="EditRoom">
                <i class="bi bi-pencil me-1"></i>Edit
            </button>
            <button class="btn btn-danger flex-grow-1" @onclick="DeleteRoom">
                <i class="bi bi-trash me-1"></i>Delete
            </button>
        </div>

        <!-- Show all rooms inside room management -->
        <div class="d-grid mt-3">
            <button class="btn btn-primary" @onclick="ShowAllRooms">
                <i class="bi bi-list-ul me-1"></i>Show All Rooms
            </button>
        </div>
    </div>

    @if (_showAllRooms)
    {
        <div class="card p-3 shadow-sm">
            <h5 class="mb-3"><i class="bi bi-table me-2"></i>All Rooms</h5>
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Room Number</th>
                        <th>Capacity</th>
                        <th>Price per Night</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>101</td>
                        <td>2</td>
                        <td>$120</td>
                        <td>
                            <button class="btn btn-sm btn-warning me-1"><i class="bi bi-pencil"></i></button>
                            <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>102</td>
                        <td>4</td>
                        <td>$200</td>
                        <td>
                            <button class="btn btn-sm btn-warning me-1"><i class="bi bi-pencil"></i></button>
                            <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    }
}

@code {
    private bool _showRoomManagement = false;
    private bool _showAllRooms = false;

    private string _roomNumber = string.Empty;
    private int _capacity;
    private decimal _pricePerNight;

    private async Task GoToRoomManagement()
    {
        _showRoomManagement = true;
        await Task.CompletedTask;
    }

    private async Task GoToUserManagement()
    {
        // placeholder for future user management
        await Task.CompletedTask;
    }

    private async Task ShowAllRooms()
    {
        _showAllRooms = true;
        await Task.CompletedTask;
    }

    private async Task CreateRoom() { await Task.CompletedTask; }
    private async Task EditRoom() { await Task.CompletedTask; }
    private async Task DeleteRoom() { await Task.CompletedTask; }
}
