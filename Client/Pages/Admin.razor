@page "/admin"
@inject NavigationManager Nav

<h3 class="mb-4 text-center">Admin Panel</h3>

<div class="row justify-content-center g-4 mb-4">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-lg h-100 p-4 hover-shadow text-center d-flex flex-column">
            <i class="bi bi-building display-1 mb-3 text-primary"></i>
            <h5 class="card-title fs-4">Manage Rooms</h5>
            <p class="card-text fs-5">Create, edit, and delete rooms.</p>
            <button class="btn btn-primary w-100 mt-auto"
                    @onclick='() => Nav.NavigateTo("/manage/rooms")'>
                Open Room Management
            </button>
        </div>
    </div>

    <div class="col-md-5 col-lg-4">
        <div class="card shadow-lg h-100 p-4 hover-shadow text-center d-flex flex-column">
            <i class="bi bi-person-badge-fill display-1 mb-3 text-secondary"></i>
            <h5 class="card-title fs-4">Manage Guests</h5>
            <p class="card-text fs-5">View and manage guests accounts.</p>
            <button class="btn btn-secondary w-100 mt-auto"
                    @onclick='() => Nav.NavigateTo("/manage/guests")'>
                Open Guests Management
            </button>
        </div>
    </div>
</div>

<div class="row justify-content-center g-4">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-lg h-100 p-4 hover-shadow text-center d-flex flex-column">
            <i class="bi bi-calendar-check display-1 mb-3 text-success"></i>
            <h5 class="card-title fs-4">Manage Bookings</h5>
            <p class="card-text fs-5">View and manage all bookings.</p>
            <button class="btn btn-success w-100 mt-auto"
                    @onclick='() => Nav.NavigateTo("/booking")'>
                Open Booking Management
            </button>
        </div>
    </div>
</div>

<style>
    .hover-shadow {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-shadow:hover {
            transform: translateY(-10px);
            box-shadow: 0 1rem 2rem rgba(0,0,0,0.15);
        }
</style>
