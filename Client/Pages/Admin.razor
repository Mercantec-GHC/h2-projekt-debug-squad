@page "/admin"
@inject NavigationManager Nav

<h3 class="mb-4 text-center">Admin Panel</h3>

<div class="row justify-content-center g-4 mb-4">
    <!-- Manage Rooms Card -->
    <div class="col-md-4 col-lg-3">
        <div class="card shadow-lg text-center h-100 admin-card">
            <div class="card-body d-flex flex-column justify-content-between">
                <div>
                    <i class="bi bi-building display-2 mb-3 text-primary"></i>
                    <h5 class="card-title">Manage Rooms</h5>
                    <p class="card-text">Create, edit, and delete rooms.</p>
                </div>
                <button class="btn btn-primary mt-3 w-100"
                        @onclick='() => Nav.NavigateTo("/manage/rooms")'>
                    Open Room Management
                </button>
            </div>
        </div>
    </div>

    <!-- Manage Users Card -->
    <div class="col-md-4 col-lg-3">
        <div class="card shadow-lg text-center h-100 admin-card">
            <div class="card-body d-flex flex-column justify-content-between">
                <div>
                    <i class="bi bi-person-badge-fill display-2 mb-3 text-secondary"></i>
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text">View and manage user accounts.</p>
                </div>
                <button class="btn btn-secondary mt-3 w-100"
                        @onclick='() => Nav.NavigateTo("/manage/users")'>
                    Open User Management
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    /* Make cards bigger and add hover effect */
    .admin-card {
        transition: transform 0.3s, box-shadow 0.3s;
        cursor: pointer;
    }

        .admin-card:hover {
            transform: translateY(-10px) scale(1.03);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.3);
        }

        /*make the icon bigger */
        .admin-card i {
            font-size: 3rem; 
        }
</style>
